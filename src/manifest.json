{
  "manifest_version": 2,
  "name": "JIRA Task Board Helper",
  "description": "Visualizing each assignee's story points in the active sprint",
  "version": "0.0.6",
  "author": "Jui-Shan Liang <jsliang.tw@gmail.com>",
  "homepage_url": "https://github.com/jsliang/jira-taskboard-helper",
  "permissions": [
    "https://*.atlassian.net/secure/RapidBoard.jspa*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/secure/RapidBoard.jspa*"
      ],
      "js": [
        "index.js"
      ],
      "run_at": "document_end"
    }
  ]
}
